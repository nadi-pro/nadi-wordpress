{
    "name": "nadi-pro/nadi-wordpress",
    "description": "Monitoring applications made simple for developers. Monitor applications crashes with Nadi, your Crash Care Companion",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nasrul Hazim Bin Mohamad",
            "email": "nasrulhazim.m@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "symfony/yaml": "^6.4 || ^7.0",
        "nadi-pro/nadi-php": "^2.0",
        "symfony/var-dumper": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Nadi\\WordPress\\": "src/"
        },
        "files": [
            "support/helpers.php"
        ]
    },
    "require-dev": {
        "laravel/pint": "^1.0"
    },
    "scripts": {
        "format" : "@php vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    }
}
